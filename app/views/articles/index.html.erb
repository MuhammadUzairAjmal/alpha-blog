<h1> Listing Articles </h1>

<%= link_to "Create new Article" , new_article_path %> <br/>


<table>

 <tr>
         <th>Title</th>
         <th>Description</th>
 </tr>

 
              <% @article.each do |f| %>
 <tr>
        
       <td>  <%= f.titile %>  </td>
               
       <td>  <%= f.description %> </td>

       <td>  <%= link_to "Edit" , edit_article_path(f) %> </td>

       <td>	     <%= link_to "Show" , article_path(f) %> </td>

        <td>	     <%= link_to "Delete" , article_path(f) , method: :delete, data: {confirm: "Are you Sure?"} %>    </td> 
 </tr>

<% end %>
	</table>

